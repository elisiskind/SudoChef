<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sdp.sudochef" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sudochef.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sudochef.yummly.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName="sudochef.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sudochef.main.MainActivity" />
        </activity>
        <activity
            android:name="sudochef.parser.ChooseRecipeActivity"
            android:label="@string/title_activity_choose_recipe" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sudochef.yummly.SearchActivity" />
        </activity>
        <activity
            android:name="sudochef.guide.GuideActivity"
            android:label="@string/title_activity_guide"
            android:parentActivityName="sudochef.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sudochef.main.MainActivity" />
        </activity>
        <activity
            android:name="sudochef.camera.CamActivity"
            android:label="@string/title_activity_cam"
            android:launchMode = "singleTask">
        </activity>
        <activity
            android:name="sudochef.bluetooth.DeviceListActivity"
            android:label="@string/title_activity_device_list" >
        </activity>
        <activity
            android:name="sudochef.bluetooth.SendDataActivity"
            android:label="@string/title_activity_send_data" >
        </activity>
        <service android:name="sudochef.voice.voicelib.SpeechActivationService" >
        </service>
    </application>

</manifest>
