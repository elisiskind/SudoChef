<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DeviceListActivity" >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOAST"
        android:id="@+id/TOAST"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="321dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BROIL"
        android:id="@+id/BROIL"
        android:layout_alignTop="@+id/TOAST"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROBE"
        android:id="@+id/PROBE"
        android:layout_alignTop="@+id/BROIL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAKE"
        android:id="@+id/BAKE"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/TOAST"
        android:layout_alignLeft="@+id/TOAST"
        android:layout_alignStart="@+id/TOAST" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONV."
        android:id="@+id/CONV"
        android:layout_alignTop="@+id/BAKE"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WARM"
        android:id="@+id/WARM"
        android:layout_alignTop="@+id/CONV"
        android:layout_alignLeft="@+id/PROBE"
        android:layout_alignStart="@+id/PROBE" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UP"
        android:id="@+id/UP"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/CONV"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOWN"
        android:id="@+id/DOWN"
        android:layout_below="@+id/UP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEMP"
        android:id="@+id/TEMP"
        android:layout_below="@+id/UP"
        android:layout_alignLeft="@+id/BAKE"
        android:layout_alignStart="@+id/BAKE" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIMER"
        android:id="@+id/TIMER"
        android:layout_alignTop="@+id/TEMP"
        android:layout_alignRight="@+id/WARM"
        android:layout_alignEnd="@+id/WARM" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:id="@+id/ENTER"
        android:layout_below="@+id/DOWN"
        android:layout_alignLeft="@+id/TEMP"
        android:layout_alignStart="@+id/TEMP"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/STOP"
        android:layout_alignTop="@+id/ENTER"
        android:layout_alignRight="@+id/TIMER"
        android:layout_alignEnd="@+id/TIMER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OVEN CONTROLLER"
        android:id="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:gravity="center_horizontal" />

</RelativeLayout>